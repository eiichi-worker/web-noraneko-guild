{
  "firestore": {
    "rules": "/firestore/firestore.rules",
    "indexes": "/firestore/firestore.indexes.json"
  },
  "hosting": {
    "public": "/hosting/app/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    }
  }
}
